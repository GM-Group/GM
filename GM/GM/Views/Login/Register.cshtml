
@{
    ViewBag.Title = "Register";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>

<h2>Register</h2>

<form method="post">
    <p> 登录名：<input type="text" size="20" id="LoginName" maxlength="20" name="LoginName" /></p>
    <p> 密码：<input type="password" size="20" id="PassWord" maxlength="20" name="PassWord" /></p>
    <p><input type="button" id="btnResister" name="btnResister" value="注册" /></p>
</form>

<script>
    $("#btnResister").click(function () {      
        document.forms[0].submit();
    });
</script>